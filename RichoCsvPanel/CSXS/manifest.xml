<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    ExtensionBundleId="com.richo.csvpanel"
    ExtensionBundleName="Richo CSV Panel"
    ExtensionBundleVersion="1.0.0"
    Version="7.0">

    <ExtensionList>
        <Extension Id="com.richo.csvpanel.panel" Version="1.0.0" />
    </ExtensionList>

    <ExecutionEnvironment>
        <HostList>
            <!-- Premiere Pro -->
            <Host Name="PPRO" Version="[13.0,99.9]" />
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <!-- CEP ランタイム -->
            <RequiredRuntime Name="CSXS" Version="9.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>

    <DispatchInfoList>
        <Extension Id="com.richo.csvpanel.panel">
            <DispatchInfo>
                <Resources>
                    <!-- パネルの HTML -->
                    <MainPath>./index.html</MainPath>
                    <!-- Premiere 側で動く ExtendScript -->
                    <ScriptPath>./jsx/richo_host.jsx</ScriptPath>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Richo CSV Panel</Menu>
                    <Geometry>
                        <Size>
                            <Width>320</Width>
                            <Height>220</Height>
                        </Size>
                    </Geometry>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
